<%-layout("/loyouts/boilerplate")%>


    <body>
        <form method="post" action="/listings/update/<%=lis1._id%>?_method=put" class="needs-validation" novalidate enctype="multipart/form-data">
            <div class="row">
                <div class="col-8 offset-2">
                    <div class="mb-3 mt-3">
                        <label for="title" class="form-label">title</label>
                        <input name="hi2[title]" placeholder="enter title" value="<%=lis1.title%>" type="text"
                            class="form-control" required>
                        <div class="invalid-feedback">invalid</div>
                    </div>
                    <div class="mb-3">
                        <label for="description" class="form-label">Description</label>
                        <textarea name="hi2[description]" rows="5" cols="25"
                            type="text" required><%=lis1.description%></textarea>
                        <div class="invalid-feedback">invalid</div>
                    </div>
                    <div class="mb-3">
                        original image </br>
                        <img src="<%=originalimage%>"/>
                    </div>
                    <div class="mb-3">
                        <label for="image" class="form-label">Upload-Image</label>
                        <input name="hi2[image]" placeholder="enter image"  type="file" class="form-control"
                        >
                    </div>
                    <div class="row">
                        <div class="mb-3 col-md-4">
                            <label for="price" class="form-label ">Price</label>
                            <input name="hi2[price]" placeholder="enter price" type="number" value="<%=lis1.price%>" required>
                            <div class="invalid-feedback">invalid</div>
                        </div>
                        <div class="mb-3 col-md-8">
                            <label for="location" class="form-label" >Location</label>
                            <input name="hi2[location]" placeholder="enter title" type="text"
                                value="<%=lis1.location%>" required>
                            <div class="invalid-feedback">invalid</div>
                        </div>
                    </div>
                    <div>
                        <label for="country" class="form-label"></label>
                        <input name="hi2[country]" plceholder="enter the country" type="text" value="<%=lis1.country%>" required>
                        <div class="invalid-feedback">invalid</div>
                    </div>
                    <button class="btn add-btn mt-3">submit</button>
                </div>

            </div>
        </form>
    </body>